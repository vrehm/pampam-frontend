        "sqip-loader": "^1.0.0",
        "stylelint": "13.5.0",
        "typescript": "^3.9.3",
        "v-click-outside": "^3.0.1",
        "webp-loader": "^0.6.0",
        "webpack-cli": "^3.3.11"
    }
